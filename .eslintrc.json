{
    "extends": [
      "prettier",
      "prettier/standard",
      "prettier/react",
      "plugin:react/recommended",
      "eslint:recommended", 
      "plugin:react/recommended"
    ],
    "plugins": ["prettier"],
    "rules": {
      "prettier/prettier": "error",
      "react-hooks/rules-of-hooks": "error", // Checks rules of Hooks
      "react-hooks/exhaustive-deps": "warn", // Checks effect dependencies    },
    "parser": "babel-eslint",
    "env": {
      "browser": true
    },
    "settings": {
      "react": {
        "pragma": "React",
        "version": "detect"
      }
    }
  }